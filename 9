#include <stdio.h>
#include <string.h> 
#include <stdbool.h> 
void printWordWithDeletedIndex(int wordIndex, char *p)
{
    int indexSkip = wordIndex % strlen(p);
    char charToSkip = p[indexSkip];
    bool someCharTyped = false;

    for(int i = 0; i < strlen(p); i++)
    {
        if( p[i] != charToSkip)
        {
            printf("%c",p[i]); 
            someCharTyped = true;
        }            
    }
    if (someCharTyped)
        printf(" ");
}
void printSentenceWithDeletedNSymbols(char str[])
{
    char delim[] = ", \n";
    char *p = strtok(str, delim);
    
    printWordWithDeletedIndex(0,p);
    int wordIndex = 1; 
    while ((p = strtok(NULL, delim)))
    {
        printWordWithDeletedIndex(wordIndex,p);
        wordIndex++;
    }

    printf("\n");
}
int main()
{
    char str[256];
    printf("Введите строку: ");
    fgets(str, 256, stdin);
    printSentenceWithDeletedNSymbols(str);

    return 0;//
}
